<div class="form__box">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2>Log In</h2>

    <div class="field">
      <%= f.label :email, class: "input__text" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input__box" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "input__text" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input__box" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn__submit" %>
    </div>
  <% end %>

  <div class="link__box">
    <div class="link__container">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

